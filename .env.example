# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
PRODUCTION_URL=https://yourdomain.com

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_forge_kit

# -----------------------------------------------------------------------------
# Better Auth
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING_32+CHARS
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Stripe Billing (optional)
# - subscription => recurring payments (Stripe subscriptions)
# - payment => one-time payment (Stripe one-shot)
# -----------------------------------------------------------------------------
ENABLE_BILLING=false
BILLING_MODE=subscription # options: subscription | payment

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# For subscription mode
STRIPE_PRICE_ID_SUBSCRIPTION=

# For payment mode (one-time purchases)
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_ENTERPRISE=

# Public Stripe keys for frontend
NEXT_PUBLIC_STRIPE_PRICE_ID_STARTER=
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE=
